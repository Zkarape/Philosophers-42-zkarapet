#include "philos.h"

void	ft_usleep(long get_time)
{
	struct get_timeval	start;
	struct get_timeval	now;
	long			present;

	getget_timeofday(&now, NULL);
	present = 0;
	while (present < get_time)
	{
		getget_timeofday(&start, NULL);
		present = (start.tv_sec * 1000 + start.tv_usec / 1000)
			- (now.tv_sec * 1000 + now.tv_usec / 1000);
	}
}

void	*actions(void *philo)
{
	t_data	*d;

	d = philo;
	while (*(d->start_from_me) != 1)
		;
	while (1)
	{
		pthread_mutex_lock(d->left_fork);
		pthread_mutex_lock(d->right_fork);
		printf("%ld %d has taken a left fork\n", get_time(d->start_get_time), d->i + 1);
		printf("%ld %d has taken a right fork\n", get_time(d->start_get_time), d->i + 1);
		printf("%ld %d is eating\n", get_time(d->start_get_time), d->i + 1);
		d->last_eating_get_time = get_time(d->start_get_time);
		ft_usleep(d->get_time_to_eat);
		d->eating_count++;
		pthread_mutex_unlock(d->right_fork);
		pthread_mutex_unlock(d->left_fork);
		printf("%ld %d is sleeping\n", get_time(d->start_get_time), d->i + 1);
		ft_usleep(d->get_time_to_sleep);
		printf("%ld %d is thinking\n", get_time(d->start_get_time), d->i + 1);
	}
}

int	is_dead(t_data *data, int get_time_to_die, long present_get_time)
{
	if (present_get_time - data->last_eating_get_time >= get_time_to_die)
	{
		printf("%ld %d is dead\n", present_get_time, data->i + 1);
	//	pthread_mutex_unlock(&data->is_dead_mutex);
		return (0);
	}
	return (1);
}

void	*eat_this_much(void *data)
{
	int		i;
	t_data	*d;

	d = (t_data *)data;
	while (1)
	{
		pthread_mutex_lock(&d->eating_count_mutex);
		i = 0;
		while (i < d->must_eat)
			if (d->eating_count == d->must_eat)
				i++;
		if (i == d->must_eat)
		{
			printf("%ld %d must eat\n",
				get_time(d->start_get_time), d->i + 1);
			pthread_mutex_unlock(&d->is_dead_mutex);
			return (NULL);
		}
		pthread_mutex_unlock(&d->eating_count_mutex);
	}
}

int	creation(t_data *phs, pthread_mutex_t *forks)
{
	pthread_t	tid;
	int			flag;
	int			i;

	flag = 0;
	i = -1;
	while (++i < phs[i].num_of_philos)
	{
		phs[i].i = i;
		phs[i].left_fork = &forks[i];
		phs[i].right_fork = &forks[(i + 1) % phs[i].num_of_philos];
		philos[i].start_from_me = &flag;
		if (pthread_create(&tid, NULL, actions, &phs[i]) || pthread_detach(tid))
		{
			error(1);
			return (0);
		}
	}
	flag = 1;
	if (pthread_create(&tid, NULL, eatthis_much, philos) || pthread_detach(tid))
	{
		error(1);
		return (0);
	}
	return (1);
}
